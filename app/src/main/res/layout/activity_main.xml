<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txEntero"
        android:layout_width="184dp"
        android:layout_height="26dp"
        android:text="Valor entero almacenado"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131" />

    <EditText
        android:id="@+id/inputEntero"
        android:layout_width="212dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Ingrese Entero"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txTexto"
        android:layout_width="216dp"
        android:layout_height="25dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="210dp"
        android:text="Texto almacenado"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputTexto" />

    <EditText
        android:id="@+id/inputTexto"
        android:layout_width="214dp"
        android:layout_height="57dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Ingrese Texto"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/inputEntero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputEntero"
        app:layout_constraintTop_toBottomOf="@+id/txEntero" />

    <TextView
        android:id="@+id/txSwitch"
        android:layout_width="151dp"
        android:layout_height="61dp"
        android:text="Valor switch almacenado"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347" />

    <Switch
        android:id="@+id/switchA"
        android:layout_width="130dp"
        android:layout_height="57dp"
        android:layout_marginTop="56dp"
        android:text="Switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputTexto" />

    <EditText
        android:id="@+id/inputDecimal"
        android:layout_width="212dp"
        android:layout_height="55dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Ingrese un valor decimal"
        android:inputType="number|numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/txSwitch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/switchA"
        app:layout_constraintTop_toBottomOf="@+id/switchA" />

    <TextView
        android:id="@+id/txDecimal"
        android:layout_width="207dp"
        android:layout_height="34dp"
        android:layout_marginTop="20dp"
        android:text="Valor Decimal Almacenado"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputDecimal"
        app:layout_constraintTop_toBottomOf="@+id/inputDecimal" />

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="217dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="221dp">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginStart="60dp"
                android:backgroundTint="#213AF1"
                android:text="Guardar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.197" />

            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:backgroundTint="#DC1717"
                android:text="Borrar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.343"
                app:layout_constraintStart_toEndOf="@+id/btnGuardar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.195" />

            <Button
                android:id="@+id/btnMostrarValores"
                android:layout_width="150dp"
                android:layout_height="62dp"
                android:layout_marginBottom="64dp"
                android:backgroundTint="#3B7015"
                android:text="Mostrar valores"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btnBorrar"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toStartOf="@+id/btnGuardar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>